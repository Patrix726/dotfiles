/* Main Config 1080p */

@import "~/.config/rofi/master-config.rasi" 

/* ---- Configuration ---- */
configuration {
	font: "Fira Code SemiBold 12";
}

element-text {
    font:	"Fira Code SemiBold 14";
}
/* ---- Window ---- */
window {
    width:	50%;
}
/* ---- Listview ---- */
listview {
  columns: 1;
  lines: 5;
  fixed-height:	true;
}

/* ---- Element ---- */
element {
  orientation: horizontal;
  padding: 10px 5px 10px 5px;
  spacing: 6px;
}

element-icon {
  size: 5%;
}

element-text {
  font: "JetBrainsMono Nerd Font SemiBold 10";
  horizontal-align: 0.5;
}

